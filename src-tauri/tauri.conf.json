{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "prem-app",
    "version": "0.0.4"
  },
  "tauri": {
    "allowlist": {
      "dialog": {
        "all": true
      },
      "path": {
        "all": true
      },
      "process": {
        "exit": true
      },
      "shell": {
        "all": true
      }
    },
    "systemTray": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "prem.tauri.dev",
      "targets": "all"
    },
    "security": {
      "csp": "default-src blob: data: filesystem: ws: wss: http: https: tauri: 'unsafe-eval' 'unsafe-inline' 'self' img-src: 'self'"
    },
    "updater": {
      "active": true,
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEVCM0ZBNkIwNDFFQjNBQUIKUldTck91dEJzS1kvNjRaTzhtZUtaMU5CdXVka0w2VFFNeWZDMStUL0k4a0N2OWR6alZlR1hjR3YK",
      "endpoints": [
        "https://github.com/tdex-network/tdex-dashboard/releases/latest/download/latest.json"
      ]

    },
    "windows": [
      {
        "fullscreen": false,
        "minHeight": 800,
        "minWidth": 1220,
        "resizable": true,
        "title": "Prem App"
      }
    ]
  }
}
