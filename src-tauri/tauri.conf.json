{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Prem",
    "version": "0.2.2"
  },
  "tauri": {
    "allowlist": {
      "dialog": {
        "all": true
      },
      "path": {
        "all": true
      },
      "process": {
        "exit": true
      },
      "shell": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "io.premai.prem-app",
      "resources": [
        "petals/*"
      ],
      "targets": "all"
    },
    "security": {
      "csp": "default-src blob: data: filesystem: ws: wss: http: https: tauri: 'unsafe-eval' 'unsafe-inline' 'self'; img-src: 'self'; worker-src blob:;"
    },
    "systemTray": {
      "iconAsTemplate": true,
      "iconPath": "icons/32x32.png"
    },
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": [
        "https://github.com/premai-io/prem-app/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEVCM0ZBNkIwNDFFQjNBQUIKUldTck91dEJzS1kvNjRaTzhtZUtaMU5CdXVka0w2VFFNeWZDMStUL0k4a0N2OWR6alZlR1hjR3YK"
    },
    "windows": [
      {
        "fileDropEnabled": false,
        "fullscreen": false,
        "height": 800,
        "minHeight": 300,
        "minWidth": 500,
        "resizable": true,
        "title": "Prem App",
        "width": 1220
      }
    ]
  }
}
